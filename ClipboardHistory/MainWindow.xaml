<Window x:Class="ClipboardHistory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Clipboard History" Height="300" Width="300"
        Style="{DynamicResource ModernWindow}">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ModernWindow" TargetType="Window">
                <Setter Property="Background" Value="#333" />
                <Setter Property="Foreground" Value="#fff" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <ListBox x:Name="listBox" />
        <Button x:Name="copyButton" Content="Copy to clipboard" Click="copyButton_Click_1" />
    </StackPanel>
</Window>




